{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "declaration": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": false,
    "experimentalDecorators": true,
  },
}
